<!DOCTYPE html>
<html lang="en">
<html>
<head>
<meta charset="utf-8">
	<title>serverStart</title>
	<style>
		body,div {
			margin: 0;
			padding: 0;
			-webkit-user-select: none;
		}
		.center {
			width: 480px;
			margin-top: 30px;
			margin-left: 370px;
			border:1px solid #3777bc;
		}
		.title {
			color: #fff;
			background-color: #3777bc;
			padding-left: 4px;
			padding-top: 5px;
			padding-bottom: 5px;
		}
		.wraper {
			margin-bottom: 10px;
		}
		.show {
			margin-top: 5px;
			margin-bottom: 20px;
			font-size: 12px;
		}
		.clearfix:after {
			content: "";
			height: 0;
			display: block;
			clear: both;
		}
		img {
			width: 65px;
			height: 80px;
			border:1px solid #3777bb;
		}
		.images {
			width: 440px;
			height: 270px;
			border:1px solid #ccc;
			margin-left: 10px;
			padding: 15px;
		}
		.jg {
			width: 140px;
			margin-bottom: 10px;
			display: inline-block;
			border:1px solid #fff;
		}
		.jg:hover {
			/*background-color: #ccc;
			*/
			opacity: 0.9;
			border: 1px solid #3777bb;
		}
		.last {
			height: 50px;
			background-color: #ccc;
			margin-top: 10px;
			line-height: 50px;
		}
		.btn {
			padding: 5px 12px;
			position: relative;
			top:0px;
			right: -328px;
		}
		.one {
			color: #fff;
			background-color: #3777bc;
		}
		.one:hover,.two:hover {
			cursor:pointer;
		}
		.two {
			background-color: #fff;
		}
		.xname {
			position: relative;
			top:-62px;
			left: 7px;
		}
		.all {
			background-color: #3777bc;
			color: #fff;
			padding: 3px 7px;
			position: relative;
			right: -300px;
		}
		.sel {
			position: relative;
			right: -308px;
			padding: 3px 7px;
		}
		.wsel {
			position: relative;
			right: -318px;
			padding: 3px 7px;
		}
		.middle {
			margin-top: 10px;
			margin-left: 10px;
			font-size: 14px;
		}
		.dark {
			background-color: #3777bc;
		}
		.noa {
			display: none;
		}
		.unoa {
			display: inline-block;
		}
	</style>
</head>
<script type="text/javascript" src="/js/jquery.js"></script>
<body>
	<div class="center">
		<div class="title">
			创建新分组
		</div>
		<div class="middle">
			<div class="wraper">
				<span>分组名称</span>
				<input type="text" class="judge" maxLength="10">
				<span>（最多输入10个字符）</span>
			</div>
			<span>查找好友</span>
			<input type="text" class="searchlei">
		</div>
		<div class="show">
			<span class="all every">全部</span>
			<span class="sel every">已选(
				<i class="first">0</i>
				)</span>
			<span class="wsel every">未选(
				<i class="second">9</i>
				)</span>
		</div>
		<div class="images">
			<span class="jg meat">
				<img src="images/chicken.jpg" alt="图片">
				<span class="xname">鸡肉</span>
			</span>
			<span class="jg shuc">
				<img src="images/doufu.jpg" alt="图片">
				<span class="xname">豆腐</span>
			</span>
			<span class="jg meat">
				<img src="images/dryfish.jpg" alt="图片">
				<span class="xname">干鱼</span>
			</span>
			<span class="jg meat">
				<img src="images/duck.jpg" alt="图片">
				<span class="xname">鸭肉</span>
			</span>
			<span class="jg meat">
				<img src="images/fish.jpg" alt="图片">
				<span class="xname">鱼肉</span>
			</span>
			<span class="jg meat">
				<img src="images/goose.jpg" alt="图片">
				<span class="xname">鹅肉</span>
			</span>
			<span class="jg fruit">
				<img src="images/litchi.jpg" alt="图片">
				<span class="xname">荔枝</span>
			</span>
			<span class="jg meat">
				<img src="images/meat.jpg" alt="图片">
				<span class="xname">肥肉</span>
			</span>
			<span class="jg shuc">
				<img src="images/root.jpg" alt="图片">
				<span class="xname">莲藕</span>
			</span>
		</div>
		<div class="last">
			<button class="btn one three">确定</button>
			<button class="btn two">取消</button>
		</div>
	</div>
	<script>
		//实现按钮hover
		$('.every').each( function (i) {
			$(this).attr('index', i);
		})
		.hover( function () {
			var index = $(this).attr('index');

			$('.every').eq(index).css({
				"background-color":"#3777bc",
				"cursor":"pointer"
			});
		}, function () {
			var index = $(this).attr('index');

			$('.every').eq(index).css({
				"background-color":"",
			});
		})

		//实现图片hover
		$('.jg').each(function (i){
			$(this).attr('index',i)
		})
		//实现图片click
		$('.jg').each(function(i){
			$(this).attr('index',i)
		}).click(function (){
			$(this).toggleClass('dark');
			var sum = $('.jg').length;
			var dark = $('.dark').length;
			$('.first').html(dark);
			$('.second').html(sum-dark);
		})
		$('.all').click(function(){
			var dark = $('.dark').length;
			var jg = $('.jg').length;
			if(dark == jg){
				$('.dark').removeClass('dark');
				$('.first').html(0);
				$('.second').html(jg)
			}else{
				$('.jg').addClass('dark');
				$('.first').html(jg);
				$('.second').html(0)
			}
		})
		// 最多输入10个字符,超过10个就自动disabled
		$('.judge').keydown( function (e) {
			var val = $(this).val();

			if (val.length > 3) {
				e.preventDefault();
			}
			
		})

		//通过查找内容显示对应图片
		$('.three').click(function () {
			var consearch = $('.searchlei').val();
			var all = $('.jg');
			var sum = $('.jg').length;
			var dark = 0;
			for(var i=0; i<all.length; i++) {
				var every = all.eq(i);
				var a = every.is(consearch);
				console.log(a)
				if(!every.hasClass(consearch)) {
					every.css('display','none');

				}else{
					every.css('display','inline-block')
					every.addClass('dark');
				}
			}
			dark = $('.dark').length;
			$('.first').html(dark);
			$('.second').html(sum-dark);
		})
	</script>
</body>
</html>







